<?xml version="1.0"?>
<ruleset name="TI Whitelabel" namespace="TI-Whitelabel">

	<description>[TI] Whitelabel WordPress Plugin coding standards.</description>

	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/wp/*</exclude-pattern>

	<config name="colors" value="1"/>
	<config name="show_progress" value="1"/>

	<arg name="tab-width" value="2"/>

	<rule ref="TI-WPCS"/>

	<rule ref="WordPress.VIP">
		<type>warning</type>
	</rule>

</ruleset>
